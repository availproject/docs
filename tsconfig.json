{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "es2022",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "incremental": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "moduleResolution": "bundler",
      "jsx": "preserve",
      "module": "esnext",
      "resolveJsonModule": true,
      "paths": {
        "@components/*": ["components/*"],
        "@static/*": ["static/*"],
        "@public/*": ["public/*"]
      },
      "plugins": [
        {
          "name": "next"
        }
      ],
      "strictNullChecks": true,
      "noUncheckedIndexedAccess": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/user-guides/_meta.ts", "app/docs/_meta.ts", "app/_meta.ts"],
    "exclude": ["node_modules", ".next"]
  }